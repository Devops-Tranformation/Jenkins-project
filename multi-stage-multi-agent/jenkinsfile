pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                dir('multi-stage-multi-agent') {
                    sh 'javac HelloWorld.java'
                }
            }
        }
        stage('Run') {
            steps {
                dir('multi-stage-multi-agent') {
                    sh 'java HelloWorld'
                }
            }
        }
    }
    post {
        always {
            echo 'Pipeline completed.'
        }
    }
}
