pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                dir('HelloWorld.java') {
                    echo 'Compiling Java program...'
                    sh 'javac HelloWorld.java'
                }
            }
        }

        stage('Run') {
            steps {
                dir('HelloWorld.java') {
                    echo 'Running Java program...'
                    sh 'java HelloWorld'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed.'
        }
    }
}
